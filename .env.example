# ═══════════════════════════════════════════════════════════════
#  ai-career-assistant-realworld — environment variables
#  Copy this file to .env and fill in your values.
#  NEVER commit .env to version control.
# ═══════════════════════════════════════════════════════════════

# ── App ─────────────────────────────────────────────────────────
APP_NAME="AI Career Assistant"
APP_VERSION="1.0.0"
DEBUG=false
LOG_LEVEL=INFO

# ── Security ─────────────────────────────────────────────────────
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE_ME_generate_a_real_secret_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# ── Vector Store ─────────────────────────────────────────────────
# Options: dev | prod
VECTOR_STORE_MODE=dev

# SQLite path (used when VECTOR_STORE_MODE=dev)
SQLITE_PATH=./data/dev.db

# Postgres DSN (used when VECTOR_STORE_MODE=prod)
POSTGRES_DSN=postgresql+asyncpg://career:secret@postgres:5432/career_db

# ── RAG tuning ───────────────────────────────────────────────────
CHUNK_SIZE=400
CHUNK_OVERLAP=80
TOP_K=5
SIMILARITY_THRESHOLD=0.30
STRICT_MODE=true

EMBEDDING_MODEL=all-MiniLM-L6-v2
FAISS_INDEX_PATH=./data/faiss.index
FAISS_META_PATH=./data/faiss_meta.json

# ── LLM Provider ─────────────────────────────────────────────────
# Options: ollama | openai | anthropic
LLM_PROVIDER=ollama

# Ollama (local — default, no API key needed)
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3

# OpenAI (optional paid provider — set LLM_PROVIDER=openai to activate)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Anthropic (optional paid provider — set LLM_PROVIDER=anthropic to activate)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Groq (FREE cloud provider — recomendado para deploy — set LLM_PROVIDER=groq)
# Crie sua chave gratuita em: https://console.groq.com
GROQ_API_KEY=
GROQ_MODEL=llama-3.1-8b-instant

# ── CORS ─────────────────────────────────────────────────────────
CORS_ORIGINS=["http://localhost:8501","http://frontend:8501"]

# ── Frontend ─────────────────────────────────────────────────────
API_BASE_URL=http://backend:8000
